<div class="presentation-body gradient">
  <div class="container-sm">

     <%= image_tag "logo_transparent.png", alt: "Logo ASAPark", width: 300 %>

        <h3 class="text-center">Ma place de parking
handicapé ASAP</h3>
      <br>
      <div class="mapboxgl-ctrl-geocoder">
      <%= simple_form_for :search, url: matches_path, method: "get" do |f|%>
      <%= f.input :address, input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
      <%= f.button :submit, class: "btn btn-secondary" %>
      <% end %>
      </div>

  </div>
  <%= link_to spots_path do %>
      <div class="text-center" style="margin-top: 30%;">
        <%= image_tag "logo_handicap_geolocal.jpg",  class: "link", alt: "Disabled", width: 100 %>
        <h2><strong>A proximité</strong></h2>
      </div>
  <% end %>
</div>
